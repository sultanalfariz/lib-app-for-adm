<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Fragment.ListPeminjamanFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/toolbar_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/text_pinjaman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peminjaman"
            android:textSize="@dimen/text_size_17"
            android:textColor="#FFF"
            android:layout_centerInParent="true"
            android:textStyle="bold"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/konten_search_peminjaman"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:background="@color/colorPrimary"
        android:padding="@dimen/dp_10"
        android:layout_below="@id/toolbar_area">

        <EditText
            android:id="@+id/form_search_peminjaman"
            android:textSize="@dimen/text_size_14"
            android:hint="Kode Peminjaman"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/bg_search_bar"/>

        <ImageView
            android:id="@+id/button_search"
            android:padding="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/ic_search"
            android:layout_alignRight="@id/form_search_peminjaman"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list_peminjaman"
        android:layout_below="@id/konten_search_peminjaman"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    </android.support.v7.widget.RecyclerView>

</RelativeLayout>