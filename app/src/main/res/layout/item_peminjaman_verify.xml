<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_peminjaman_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        app:cardElevation="@dimen/dp_5"
        app:cardCornerRadius="@dimen/dp_8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/konten_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_130">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/gambar_buku"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_110"
                    app:riv_corner_radius="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:src="@drawable/gambar_buku"
                    android:scaleType="fitXY"
                    android:layout_alignParentLeft="true"/>

                <RelativeLayout
                    android:id="@+id/konten_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/gambar_buku"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_8">

                    <TextView
                        android:id="@+id/text_kode_peminjaman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00023"
                        android:textAllCaps="true"
                        android:textColor="#d72b2e"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textSize="@dimen/text_size_17"/>

                    <TextView
                        android:id="@+id/text_nama_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_kode_peminjaman"
                        android:text="muhammad Sultan alfariz"
                        android:textAllCaps="true"
                        android:textColor="#333"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/dp_3"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textSize="@dimen/text_size_13"/>

                    <TextView
                        android:id="@+id/text_nim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_nama_user"
                        android:text="195150209111021"
                        android:textColor="#777"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/dp_2"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textSize="@dimen/text_size_13"/>

                    <TextView
                        android:id="@+id/text_judul_buku"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_nim"
                        android:text="Laskar pelangi"
                        android:textAllCaps="true"
                        android:textColor="#333"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/dp_2"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textSize="@dimen/text_size_13"/>

                    <TextView
                        android:id="@+id/text_status_peminjaman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dipinjam"
                        android:textAllCaps="true"
                        android:textColor="#25732F"
                        android:textStyle="italic"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textSize="@dimen/text_size_12"/>

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:id="@+id/view_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@id/konten_1"
                android:background="#ddd"/>

            <RelativeLayout
                android:id="@+id/konten_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_below="@+id/view_1">

                <TextView
                    android:id="@+id/btn_selesai"
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/bg_btn_red"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="Selesai"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:padding="2dp"
                    android:gravity="center"/>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>